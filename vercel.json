{
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ],
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    { "src": "/$", "dest": "/api/index.php" },
    { "src": "/accueil", "dest": "/api/accueil.php" },
    { "src": "/vous", "dest": "/api/vous.php" },
    { "src": "/admin", "dest": "/api/admin.php" },
    { "src": "/emplois", "dest": "/api/emplois.php" },
    { "src": "/login-check", "dest": "/api/login-check.php" },
    
    { "src": "/chat", "dest": "/api/chat.php" },
    { "src": "/reseau", "dest": "/api/reseau.php" },
    { "src": "/profil", "dest": "/api/profil.php" },
    { "src": "/css/(.*)", "dest": "/public/css/$1" },
    { "src": "/js/(.*)", "dest": "/public/js/$1" }
  ]
}
